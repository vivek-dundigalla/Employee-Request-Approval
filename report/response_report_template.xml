<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Paper Format -->
    <record id="paperformat_employee_request" model="report.paperformat">
        <field name="name">Request Letter</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">20</field>
        <field name="margin_left">15</field>
        <field name="margin_right">15</field>
        <field name="header_spacing">10</field>
        <field name="dpi">96</field>
    </record>


    <!-- Response for Leave Request -->

    <record id="report_Leave_request_response" model="ir.actions.report">
        <field name="name">Employee Request Response</field>
        <field name="model">employee.request</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sdm_employee_request_approval.response_Leave_request_template</field>
        <field name="report_file">sdm_employee_request_approval.response_Leave_request_template</field>
        <field name="print_report_name">'Leave Request - %s' % (object.employee_id.name)</field>
        <field name="paperformat_id" ref="paperformat_employee_request"/>
    </record>

    <!--    Response for Experience Certificate-->
    <record id="report_experience_certificate_response" model="ir.actions.report">
